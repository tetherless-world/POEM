# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /               controllers.HomeController.index(request: Request)

GET     /query          controllers.HomeController.query(request: Request)
POST    /query          controllers.HomeController.query(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file   controllers.Assets.versioned(path="/public", file: Asset)

GET     /fhir           controllers.HomeController.fhir(uri: String, format: String, version: String)
GET     /excel          controllers.HomeController.excel(uri: String)
GET     /api/languages              controllers.ApiController.getLanguages()
GET     /api/questionnaires         controllers.ApiController.getQuestionnaires()

# Chat API endpoints
GET     /chat                       controllers.ChatController.chatPage(request: Request)
+nocsrf
POST    /api/chat                   controllers.ChatController.sendMessage(request: Request)
GET     /api/chat/history           controllers.ChatController.getChatHistory(request: Request)